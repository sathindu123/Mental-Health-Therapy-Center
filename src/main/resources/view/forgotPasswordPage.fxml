         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Line endX="202.0" layoutX="284.0" layoutY="271.0" startX="-100.0" />
      <Button layoutX="270.0" layoutY="357.0" mnemonicParsing="false" onAction="#btn_OK" prefHeight="25.0" prefWidth="128.0" style="-fx-background-radius: 20; -fx-background-color: #27ae60;" text="OK" textFill="WHITE">
