            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <TextField fx:id="txtemail" layoutX="201.0" layoutY="132.0" onAction="#O_Action_email" prefHeight="31.0" prefWidth="269.0" promptText="Enter Your Email" style="-fx-background-radius: 20;">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="txtuserName" layoutX="201.0" layoutY="169.0" onAction="#O_Action_UserName" prefHeight="31.0" prefWidth="269.0" promptText="Enter user name" style="-fx-background-radius: 20;">
