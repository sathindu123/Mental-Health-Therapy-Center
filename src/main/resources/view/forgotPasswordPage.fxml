<AnchorPane prefHeight="491.0" prefWidth="661.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.therapycenter.controller.forgotPasswordController">
   <children>
      <ImageView fitHeight="491.0" fitWidth="661.0">
         <image>
            <Image url="@../images/icon/login.jpg" />
         </image>
      </ImageView>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#dddddd" height="310.0" layoutX="184.0" layoutY="85.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="2.0" style="-fx-arc-height: 50; -fx-arc-width: 50;" width="302.0" />
      <Label layoutX="242.0" layoutY="86.0" text="Forgot Password?" underline="true">
