      <PasswordField fx:id="txtpassword" layoutX="201.0" layoutY="280.0" onAction="#onActionpassword" prefHeight="31.0" prefWidth="269.0" promptText="new password" style="-fx-background-radius: 20;" />
      <Button layoutX="401.0" layoutY="413.0" mnemonicParsing="false" onAction="#btnlogout" prefHeight="25.0" prefWidth="86.0" style="-fx-background-color: #1d46fe; -fx-background-radius: 25;" text="Log Out" textFill="WHITE">
